#!/usr/bin/env sh

# Run translation validation (–±–ª–æ–∫–∏—Ä—É–µ—Ç –∫–æ–º–º–∏—Ç –µ—Å–ª–∏ –µ—Å—Ç—å –Ω–µ–¥–æ—Å—Ç–∞—é—â–∏–µ –ø–µ—Ä–µ–≤–æ–¥—ã)
echo "üåê Validating translations..."
npm run validate:translations

# Check if validation failed
if [ $? -ne 0 ]; then
  echo "‚ùå Translation validation failed. Please fix missing translations before committing."
  echo "üí° Tip: Run 'npm run validate:translations' to see all missing translations"
  exit 1
fi

echo "‚úÖ Translation validation passed!"

# Run linting (—Ç–æ–ª—å–∫–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è, –Ω–æ –Ω–µ –±–ª–æ–∫–∏—Ä—É–µ–º)
echo "üîç Running ESLint (showing warnings only)..."
npm run lint || echo "‚ö†Ô∏è  Found ESLint warnings, but allowing commit to proceed"
